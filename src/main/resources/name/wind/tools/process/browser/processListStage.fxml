<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import name.wind.tools.process.browser.ExecutableHandleCellFactory?>
<?import name.wind.tools.process.browser.ExecutableHandleCellValueFactory?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="50.0" minWidth="100.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <TextField fx:id="filterTextField" promptText="%stage.processList.searchBox.prompt" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="4.0"/>
            </BorderPane.margin>
        </TextField>
    </top>
    <padding>
        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
    </padding>
    <center>
        <fx:define>
            <ExecutableHandleCellFactory fx:id="cellFactory"/>
            <ExecutableHandleCellValueFactory fx:id="cellValueFactory"/>
        </fx:define>
        <TreeTableView fx:id="processTreeTableView" prefHeight="200.0" prefWidth="200.0" showRoot="false" BorderPane.alignment="CENTER">
            <columns>
                <TreeTableColumn fx:id="identifierColumn" maxWidth="10000.0" minWidth="50.0" prefWidth="50.0" text="%stage.processList.table.column.identifier">
                    <cellValueFactory>
                        <fx:reference source="cellValueFactory"/>
                    </cellValueFactory>
                </TreeTableColumn>
                <TreeTableColumn fx:id="nameColumn" maxWidth="20000.0" minWidth="100.0" prefWidth="100.0" text="%stage.processList.table.column.name">
                    <cellFactory>
                        <fx:reference source="cellFactory"/>
                    </cellFactory>
                    <cellValueFactory>
                        <fx:reference source="cellValueFactory"/>
                    </cellValueFactory>
                </TreeTableColumn>
                <TreeTableColumn fx:id="executablePathColumn" maxWidth="70000.0" minWidth="200.0" prefWidth="200.0" text="%stage.processList.table.column.executablePath">
                    <cellFactory>
                        <fx:reference source="cellFactory"/>
                    </cellFactory>
                    <cellValueFactory>
                        <fx:reference source="cellValueFactory"/>
                    </cellValueFactory>
                </TreeTableColumn>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem fx:id="refreshMenuItem" text="%stage.processList.contextMenu.refresh" onAction="#refresh"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="makeFullscreenMenuItem" text="%stage.processList.contextMenu.makeFullscreen" onAction="#makeFullscreen"/>
                        <MenuItem fx:id="terminateMenuItem" text="%stage.processList.contextMenu.terminate" onAction="#terminate"/>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TreeTableView>
    </center>
</BorderPane>
